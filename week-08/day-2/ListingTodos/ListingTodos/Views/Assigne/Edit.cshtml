@model Assigne
<form action="/@Model.Id/editAssigne" method="post" class="form-horizontal">
    <br />
    <fieldset>
        <legend><strong>Edit Assigne</strong></legend>
        <div class="form-group">
            <label for="title" class="col-lg-2 control-label">Your Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="Name" placeholder="Name" value=@Model.Name>
                <input type="text" class="form-control" name="Todos" placeholder="Name" value=@Model.Email>
            </div>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </fieldset>
</form>

