@model Todo

<form action="/@Model.Id/edit" method="post" class="form-horizontal">
    <br />
    <fieldset>
        <legend><strong>Edit Todo</strong></legend>
        <div class="form-group">
            <label for="title" class="col-lg-2 control-label">Todo description</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="Title" placeholder="Title" value=@Model.Title>
            </div>
        </div>
        <label>Urgent</label>
        @if (Model.IsUrgent)
        {
            <input type="checkbox" name="IsUrgent" value="TRUE" checked />
            <input type="hidden" name="IsUrgent" value="FALSE" />
        }
        else
        {
            <input type="checkbox" name="IsUrgent" value="TRUE" />
            <input type="hidden" name="IsUrgent" value="FALSE" />
        }
        <br />
        <label>Done</label>
        @if (Model.IsDone)
        {
            <input type="checkbox" name="IsDone" value="TRUE" checked />
            <input type="hidden" name="IsDone" value="FALSE" />
        }
        else
        {
            <input type="checkbox" name="IsDone" value="TRUE" />
            <input type="hidden" name="IsDone" value="FALSE" />
        }
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>

